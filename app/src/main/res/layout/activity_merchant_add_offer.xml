<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Merchant_add_offer"
    android:paddingRight="30dp"
    android:paddingLeft="30dp"

    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Offer"
        android:textSize="20dp"
        android:textColor="#7c7c7c"
        android:background="#e4e4e4"
        android:gravity="center"
        android:padding="6dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Offer Title"
        android:textSize="20dp"
        android:textColor="@color/headings"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Offer description"
        android:textSize="20dp"
        android:textColor="@color/headings"
        android:layout_marginTop="11dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Brief details"
        />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/circular_btn"
    android:layout_gravity="center"
    android:layout_marginTop="15dp"
    android:text="+ Photo"
    android:textColor="#a3a3a3"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/etxt_fromdate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:hint="From Date" />

        <EditText
            android:id="@+id/etxt_todate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:hint="To Date" />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Discount percentage"
        android:textSize="20dp"
        android:textColor="@color/headings"
        android:layout_marginTop="11dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="offer discount"
        />

    <Button
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="Add new branch"
        android:background="@color/colorAccent"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        />
</LinearLayout>